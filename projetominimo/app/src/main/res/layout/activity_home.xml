<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#1b2c2c"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:background="#1b2c2c"
            />

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="12dp"
            android:gravity="center" >
            <EditText
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:background="#e7f4d7"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/search"
                android:background="#dcf4e4"
                />

        </RelativeLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:src="@drawable/filtro"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <!--    Div do video-->


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="#dcf4e4"
            android:src="@drawable/video" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="ALUNO - Fundamental 1 - 1ยบ Ano - Bloco 6"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#1b2c2c"
            android:background="#c4e09e"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="300dp"
            android:fontFamily="sans-serif"
            android:text="3:00"
            android:gravity="center"
            android:textSize="18dp"
            android:background="#c4e09e"
            tools:ignore="ExtraText">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button android:id="@+id/button_teste"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Teste"/>

        <TextView android:id="@+id/text_teste"
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="ola"
            android:textSize="25sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:background="#1b2c2c">

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:src="@drawable/config"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="194dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:src="@drawable/bell"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:layout_width="29dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:src="@drawable/materiais"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>
</LinearLayout>